<% content_for :title do %>
  首页 
<% end %>

<% if flash[:notice] %>
  <div class='alert alert-success'>
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <%= flash[:notice] %>
  </div>
<% end %>
<%= Qiniu::RS.stat("ppst", "#{current_user.id}-253-carrierwave-file-uploads.mp4") %>

<div class="span9">
  <% @casts.each do |cast| %>
    <div class="poster span4">

      <div class="avatar_box">
        <div class="avatar_green">
          <img src="<%= cast.user.avatar_type(:small) %>"/ >
        </div>
      </div>

      <div class="casts">
        <div class="casts_header">
          <h3><%= cast.user.name %></h3>
          <p>-在<%= time_ago_in_words(cast.updated_at) %>前更新</p>
        </div>
        <hr>
        <div class="casts_content">
          <a href="<%= cast_path cast %>"><%= cast.title %></a>
        </div>
        <hr>
        <div class="casts_footer">
          <div class="casts_footer_icon pull-left"><i class="icon-tags"></i>vim</div>
          <div class="casts_footer_icon pull-left"><i class="icon-thumbs-up"></i>(0)</div>
          <div class="casts_footer_icon pull-left"><i class="icon-thumbs-down"></i>(0)</div>
          <div class="casts_footer_icon pull-left"><i class="icon-comment"></i>(<%= cast.comments.size %>)</div>
        </div>
      </div>
    </div>
  <% end %>
</div>
