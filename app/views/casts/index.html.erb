      <li title="rails"><i class="icon-tag rsidebar_tag"></i> rails </li> 
      <li title="nginx"><i class="icon-tag rsidebar_tag"></i> nginx </li>
      <li title="gem"><i class="icon-tag rsidebar_tag"></i> gem </li>
      <li title="postgresql"><i class="icon-tag rsidebar_tag"></i> postgresql </li>
      <li title="thin"><i class="icon-tag rsidebar_tag"></i> thin </li> 
      <li title="heroku"><i class="icon-tag rsidebar_tag"></i> heroku </li>
      <li title="mysql"><i class="icon-tag rsidebar_tag"></i> mysql </li>
    </ul>
  </div>
</div>


